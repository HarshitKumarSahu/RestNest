<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3 style="margin-top: 1rem;">Edit Listing :</h3>
            <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required>
                    <div class="valid-feedback">
                        Done
                    </div>
                    <div class="invalid-feedback">
                        Please enter title
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required><%=listing.description%></textarea>
                    <div class="valid-feedback">
                        Done
                    </div>
                    <div class="invalid-feedback">
                        Please enter description
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input type="url" name="listing[image]" value="<%=listing.image%>" class="form-control" required>
                    <div class="valid-feedback">
                        Done
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid url
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-5">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" value="<%=listing.price%>" class="form-control" required>
                        <div class="valid-feedback">
                            Done
                        </div>
                        <div class="invalid-feedback">
                            Please enter valid price
                        </div>
                    </div>
                    <div class="mb-3 col-md-7">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control" required>
                        <div class="valid-feedback">
                            Done
                        </div>
                        <div class="invalid-feedback">
                            country name required
                        </div>
                    </div>
                </div>
                <div class="mb-3 ">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" value="<%=listing.location%>" min="0" class="form-control" required>
                    <div class="valid-feedback">
                        Done
                    </div>
                    <div class="invalid-feedback">
                        location required
                    </div>
                </div>
                <div class="d-grid col-3">
                    <button class="mb-5 mt-2 btn btn-primary" style="background-color: #004aad;">Edit</button>
                </div>
            </form>
        </div>
    </div>
</body>